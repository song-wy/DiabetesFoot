@model DiabetesFoot.Models.Patient

@{
    ViewBag.Title = "患者详情";
}

<h2>患者详情</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <!-- 患者姓名 -->
        <dt>
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Name)
        </dd>

        <!-- 性别 -->
        <dt>
            @Html.DisplayNameFor(model => model.Gender)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Gender)
        </dd>

        <!-- 出生日期 -->
        <dt>
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd>
            @if (Model.BirthDate.HasValue)
            {
                @Model.BirthDate.Value.ToString("yyyy-MM-dd")
            }
            else
            {
                <span class="text-muted">未填写</span>
            }
        </dd>

        <!-- 手机号 -->
        <dt>
            @Html.DisplayNameFor(model => model.Phone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Phone)
        </dd>

        <!-- 紧急联系人 -->
        <dt>
            @Html.DisplayNameFor(model => model.EmergencyContact)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmergencyContact)
        </dd>

        <!-- 紧急联系电话 -->
        <dt>
            @Html.DisplayNameFor(model => model.EmergencyPhone)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.EmergencyPhone)
        </dd>

        <!-- 糖尿病类型 -->
        <dt>
            @Html.DisplayNameFor(model => model.DiabetesType)
        </dt>
        <dd>
            @if (Model.DiabetesType.HasValue)
            {
                @(Model.DiabetesType == 1 ? "1型" : "2型")
            }
            else
            {
                <span class="text-muted">未填写</span>
            }
        </dd>

        <!-- Wagner分级 -->
        <dt>
            @Html.DisplayNameFor(model => model.WagnerGrade)
        </dt>
        <dd>
            @if (Model.WagnerGrade.HasValue)
            {
                @Html.DisplayFor(model => model.WagnerGrade)
            }
            else
            {
                <span class="text-muted">未填写</span>
            }
        </dd>

        <!-- 注册日期 -->
        <dt>
            @Html.DisplayNameFor(model => model.RegisterDate)
        </dt>
        <dd>
            @Model.RegisterDate.ToString("yyyy-MM-dd")
        </dd>
    </dl>
</div>

<!-- 最近血糖记录 -->
@if (ViewBag.BloodGlucoseRecords != null && ((List<DiabetesFoot.Models.BloodGlucoseRecord>)ViewBag.BloodGlucoseRecords).Any())
{
    <h3>最近血糖记录</h3>
    <table class="table">
        <tr>
            <th>血糖值(mmol/L)</th>
            <th>记录时间</th>
            <th>测量类型</th>
            <th>状态</th>
        </tr>
        @foreach (var record in (List<DiabetesFoot.Models.BloodGlucoseRecord>)ViewBag.BloodGlucoseRecords)
        {
            <tr class="@(record.IsCritical ? "danger" : "")">
                <td>@record.GlucoseValue</td>
                <td>@record.RecordTime.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@record.MeasureType</td>
                <td>
                    @if (record.IsCritical)
                    {
                        <span class="text-danger">异常</span>
                    }
                    else
                    {
                        <span class="text-success">正常</span>
                    }
                </td>
            </tr>
        }
    </table>
    @Html.ActionLink("查看全部血糖记录", "Record", "BloodGlucose", new { id = Model.PatientId }, new { @class = "btn btn-default" })
}

<!-- 最近伤口记录 -->
@if (ViewBag.WoundRecords != null && ((List<DiabetesFoot.Models.WoundRecord>)ViewBag.WoundRecords).Any())
{
    <h3>最近伤口记录</h3>
    <table class="table">
        <tr>
            <th>记录日期</th>
            <th>位置</th>
            <th>大小(cm²)</th>
            <th>状态</th>
        </tr>
        @foreach (var record in (List<DiabetesFoot.Models.WoundRecord>)ViewBag.WoundRecords)
        {
            <tr>
                <td>@record.RecordDate.ToString("yyyy-MM-dd")</td>
                <td>@record.Position</td>
                <td>@record.Size</td>
                <td>@record.HealingStatus</td>
            </tr>
        }
    </table>
    @Html.ActionLink("查看全部伤口记录", "Index", "WoundRecord", new { patientId = Model.PatientId }, new { @class = "btn btn-default" })
}

<!-- 操作按钮 -->
<p>
    @Html.ActionLink("编辑", "Edit", new { id = Model.PatientId }, new { @class = "btn btn-primary" }) |
    @Html.ActionLink("删除", "Delete", new { id = Model.PatientId }, new { @class = "btn btn-danger" }) |
    @Html.ActionLink("返回列表", "Index", null, new { @class = "btn btn-default" })
</p>

