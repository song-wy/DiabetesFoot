@{
    ViewBag.Title = "伤口愈合进度";
}

<h2>伤口愈合进度</h2>

<div class="row">
    <div class="col-md-8">
        <canvas id="healingChart" height="300"></canvas>
    </div>
    <div class="col-md-4">
        <table class="table" id="progressTable">
            <!-- 动态加载数据 -->
        </table>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        $(function() {
            $.getJSON('@Url.Action("HealingProgress", new { patientId = ViewBag.PatientId })', function(data) {
                // 渲染图表
                var ctx = document.getElementById('healingChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: data.map(item => item.Date),
                        datasets: [{
                            label: '伤口大小(cm²)',
                            data: data.map(item => item.Size),
                            borderColor: 'rgb(75, 192, 192)',
                            tension: 0.1
                        }]
                    }
                });

                // 填充表格
                var tableHtml = '<tr><th>日期</th><th>大小(cm²)</th><th>状态</th></tr>';
                data.forEach(item => {
                    tableHtml += `<tr><td>${item.Date}</td><td>${item.Size}</td><td>${item.Status}</td></tr>`;
                });
                $('#progressTable').html(tableHtml);
            });
        });
    </script>
}