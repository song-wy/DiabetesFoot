@model DiabetesFoot.Models.WoundRecord

@{
    ViewBag.Title = "编辑伤口记录";
}

<h2>编辑伤口记录</h2>

@using (Html.BeginForm("Edit", "WoundRecord", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        <!-- 隐藏字段：WoundId 和 PatientId -->
        @Html.HiddenFor(model => model.WoundId)
        @Html.HiddenFor(model => model.PatientId)

        <!-- 记录日期 -->
        <div class="form-group">
            @Html.LabelFor(model => model.RecordDate, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.RecordDate, new { htmlAttributes = new { @class = "form-control", type = "datetime-local" } })
                @Html.ValidationMessageFor(model => model.RecordDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 伤口位置 -->
        <div class="form-group">
            @Html.LabelFor(model => model.Position, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Position, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Position, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 伤口大小 -->
        <div class="form-group">
            @Html.LabelFor(model => model.Size, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Size, new { htmlAttributes = new { @class = "form-control", type = "number", step = "0.01" } })
                @Html.ValidationMessageFor(model => model.Size, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 伤口描述 -->
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", rows = 4 })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 愈合状态 -->
        <div class="form-group">
            @Html.LabelFor(model => model.HealingStatus, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.HealingStatus, new SelectList(new[] { "良好", "一般", "较差", "恶化" }), "选择状态", new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.HealingStatus, "", new { @class = "text-danger" })
            </div>
        </div>

        <!-- 当前照片 -->
        @if (!string.IsNullOrEmpty(Model.PhotoPath))
        {
            <div class="form-group">
                <label class="control-label col-md-2">当前照片</label>
                <div class="col-md-10">
                    <img src="@Model.PhotoPath" alt="当前照片" style="max-width: 200px; max-height: 200px;" class="img-thumbnail" />
                </div>
            </div>
        }

        <!-- 更新照片 -->
        <div class="form-group">
            <label class="control-label col-md-2">更新照片</label>
            <div class="col-md-10">
                <input type="file" name="woundPhoto" id="woundPhoto" class="form-control" />
                <span class="help-block">如果不上传新照片，将保留当前照片。照片大小不能超过5MB。</span>
            </div>
        </div>

        <!-- 隐藏字段：保留原有照片路径 -->
        @Html.HiddenFor(model => model.PhotoPath)

        <!-- 提交按钮 -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="保存修改" class="btn btn-primary" />
                @Html.ActionLink("取消", "Index", new { patientId = Model.PatientId }, new { @class = "btn btn-default" })
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

